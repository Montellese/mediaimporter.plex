<?xml version="1.0" encoding="UTF-8"?>
<window>
    <defaultcontrol always="true">3002</defaultcontrol>
    <onload>Dialog.Close(fullscreeninfo, true)</onload>
    <onload>Dialog.Close(videoosd, true)</onload>
    <controls>
        <control type="group">
            <animation type="WindowOpen" reversible="false">
                <effect type="fade" start="0" end="100" time="250"/>
            </animation>
            <animation type="WindowClose" reversible="false">
                <effect type="fade" start="100" end="0" time="250"/>
            </animation>
            <control type="group">
                <width>300</width>
                <height>100</height>
                <bottom>20</bottom>
                <right>20</right>
                <control type="grouplist" id="3001">
                    <orientation>horizontal</orientation>
                    <height>100</height>
                    <itemgap>10</itemgap>
                    <align>center</align>
                    <control type="button" id="3002">
                        <width>300</width>
                        <height>100</height>
                        <font>font13</font>
                        <textoffsetx>20</textoffsetx>
                        <textcolor>FFF0F0F0</textcolor>
                        <selectedcolor>FFF0F0F0</selectedcolor>
                        <disabledcolor>40FFFFFF</disabledcolor>
                        <shadowcolor>FF000000</shadowcolor>
                        <align>center</align>
                        <aligny>center</aligny>
                        <label>$ADDON[mediaimporter.plex 32031]</label>
                        <texturefocus border="40" colordiffuse="FF12A0C7">dialogbutton-fo.png</texturefocus>
                        <texturenofocus border="40">dialogbutton-nofo.png</texturenofocus>
                    </control>
                </control>
            </control>
        </control>
    </controls>
</window>
